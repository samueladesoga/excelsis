<% @public_services = data["contentful"]["service"].values.find_all{|serv|serv["sector"] == "public"}.group_by{|v|v["type"]} %>

<div style="height: 30px"></div>
<div class="container">
    <div class="row">
        <!--Sector start -->
        <%# @sectors.each do |s| %>
        <div class="col-md-8">
            <h3>HR Learning and Development</h3>
            <ul>
                <% @public_services.each do |type, service_data| %>
                <li class="list-unstyled">
                    <h4><%= type %></h4>
                    <% service_data.each do |sd| %>
                        <ul>
                            <li>
                                <%= sd["name"] %>
                                <% if not sd["description"].nil? %>
                                    <ul>
                                        <li>
                                            <%= sd["description"] %>
                                        </li>
                                    </ul>
                                <%end%>
                            </li>
                        </ul>
                    <% end %>
                <% end %>
            <ul>
        </div>
        <%# end %>
    <!-- Sector end -->
    </div>
</div>

<div style="height: 80px"></div>